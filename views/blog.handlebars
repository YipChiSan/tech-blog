<div class="text-center" id="blog" value={{blog.id}}>
  <h2 id="blog-title">{{blog.title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p id="blog-context">{{blog.context}}</p>
  <p>Created by {{user.name}} on {{format_date blog.date_created}}</p>
  {{#if (isAuthor blog.user.id user_id) }}
    <button class="no-button" id="edit-button">Edit</button>
  {{/if}}
</div>

<div id="comment">
  <h3>Comment</h3>
  {{#each comments as |comment| }}
    <div id={{makeID comment.id}}>{{comment.context}}</div>
    <p style="color:blue;font-style: italic;display: inline-block">Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
    {{#if (isAuthor comment.user_id comment.logged_in_user) }}
      <button style="display: inline-block" class="no-button comment" value={{comment.id}}>Edit Comment</button>
      <button style="display: inline-block" class="no-button del-comment" value={{comment.id}}>Delete Comment</button>
    {{/if}}
  {{/each}}

  {{#if logged_in}}
  <form class="form">
    <div class="form-group">
        <label for="comment-context">Comment:</label>
        <textarea class="form-input" id="comment-context" name="comment-context"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="comment-create">Create Comment</button>
      </div>
  </form>
  {{/if}}
</div>


